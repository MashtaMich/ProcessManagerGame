<!-- res/drawable/bg_swap_option.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF80CBC4" /> <!-- teal when tapped -->
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFE0F2F1" /> <!-- light teal -->
            <stroke android:width="2dp" android:color="#FF009688" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>